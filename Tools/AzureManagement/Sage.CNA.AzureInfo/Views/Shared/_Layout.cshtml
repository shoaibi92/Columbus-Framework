<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CNA 2.0 Build Info 1.0</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sage CNA 2.0", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Environments", "Index", "Home")</li>
                    <li>@Html.ActionLink("Weekly Build Schedule", "BuildPlan", "Home")</li>
                    <li>@Html.ActionLink("Developer-Screen Mapping", "DeveloperScreenMap", "Home")</li>
                </ul>
                <div class="timeago" id="divTimeAgo">
                    <span class="timeago">Updated</span>
                    <time class="timeago" datetime="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ssK")" title="@DateTime.Now.ToString("f")">
                        @DateTime.Now.ToString("f")
                    </time>
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sage Software, Inc. All Rights Reserved.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript">
        $(function () {
            $("time.timeago").timeago();
        });
        $('#divTimeAgo').click(function () {
            location.reload();
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
